<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sports.scavengerhunt.view.MenuActivity"
    android:background="#ff000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_button_join_game"
            android:onClick="selectJoinGame"
            android:id="@+id/activity_menu_join_game"
            android:background="@color/button_color_yellow" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_button_create_game"
            android:onClick="selectCreateGame"
            android:id="@+id/activity_menu_create_game"
            android:background="@color/button_color_salmon" />
    </LinearLayout>
</RelativeLayout>
